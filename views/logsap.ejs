<h1>Registros de Sapatos</h1>

<table>
  <tr>
    <th>Marca</th>
    <th>Cor</th>
    <th>Tamanho</th>
    <th>Tipo</th>
    <th>Ação</th>
  </tr>
  <% shoes.forEach(shoe => { %>
    <tr>
      <td><%= shoe.marca %></td>
      <td><%= shoe.cor %></td>
      <td><%= shoe.tamanho %></td>
      <td><%= shoe.tipo %></td>
      <td>
        <form action="/logsap/<%= shoe.id %>" method="DELETE">
            <button type="submit">Excluir</button>
          </form>
                  
      </td>
    </tr>
  <% }); %>
</table>

<form action="/cadsap" method="GET">
    <button type="submit">Cadastrar Sapatos</button>
</form>
